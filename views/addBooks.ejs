<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <!-- bootstrep 4-->
  <%- include('_bootstrap'); %>
</head>

<body>
  <%- include('_header')%>
    <div class="container justify-content-center ">
      <div class="row">
        <div class="col-12   justify-content-center">
          <h1 style="text-align: center;">add books</h1>
          <div class="w-100 p-3">
            <form class="w-100 p-3 "action="/book-create" method="post">
              <div class="form-group">
                <label for="exampleInputEmail1">Book Name</label>
                <input type="text" class="form-control" name="bookname" aria-describedby="emailHelp"
                  placeholder="Enter Book Name">
                <small id="emailHelp" class="form-text text-muted">Enter Book name .</small>
              </div>
              <div class="form-group">
                <label for="exampleInputWriter">Writer Name</label>
                <input type="text" class="form-control" name="writername" id="exampleInputWriter"
                  placeholder="Book Writer Name">
              </div>

              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-3 p-2 m-3">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Book Name</th>
            <th scope="col">Writer Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <%for(let i of book_list){%>
            <tr>
              <td>
                <%=i.bookname%>
              </td>
              <td>
                <%=i.writername%>
              </td>
              <td><a class="btn btn-primary" href="/delete-book/?id=<%=i._id%>" role="button">Delete</a></td>
            </tr>
            <%}%>
        </tbody>
      </table>
    </div>
</body>

</html>